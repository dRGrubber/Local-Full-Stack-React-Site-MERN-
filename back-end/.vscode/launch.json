{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "localhost (Chrome)",
      "url": "http://localhost:8000/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "edge",
      "request": "launch",
      "name": "localhost (Edge)",
      "url": "http://localhost:8000/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node",
      "skipFiles": [ "<node_internals>/**" ],
      "program": "${workspaceFolder}/src/server.js",
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    }
  ]
}